{
	"name": "ai-importer",
	"version": "0.1.0",
	"description": "Import content from social media platforms into WordPress using AI-powered analysis and mapping.",
	"author": "Adam Silverstein",
	"license": "GPL-2.0-or-later",
	"main": "build/index.js",
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=9.0.0"
	},
	"scripts": {
		"build": "wp-scripts build",
		"build:production": "NODE_ENV=production wp-scripts build",
		"start": "wp-scripts start",
		"lint:js": "wp-scripts lint-js src/",
		"lint:js:fix": "wp-scripts lint-js src/ --fix",
		"lint:css": "wp-scripts lint-style src/**/*.scss",
		"lint:css:fix": "wp-scripts lint-style src/**/*.scss --fix",
		"lint": "npm run lint:js && npm run lint:css",
		"lint:fix": "npm run lint:js:fix && npm run lint:css:fix",
		"format": "wp-scripts format src/",
		"format:check": "wp-scripts format src/ --check",
		"test:unit": "wp-scripts test-unit-js",
		"test:unit:watch": "wp-scripts test-unit-js --watch",
		"test:e2e": "wp-scripts test-playwright",
		"check-engines": "wp-scripts check-engines",
		"check-licenses": "wp-scripts check-licenses",
		"packages-update": "wp-scripts packages-update",
		"prebuild": "npm run check-engines",
		"prepare": "husky"
	},
	"devDependencies": {
		"@playwright/test": "1.57.0",
		"@wordpress/dependency-extraction-webpack-plugin": "^6.0.0",
		"@wordpress/eslint-plugin": "^21.0.0",
		"@wordpress/scripts": "^31.2.0",
		"@wordpress/stylelint-config": "^22.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7"
	},
	"dependencies": {
		"@wordpress/api-fetch": "^7.0.0",
		"@wordpress/components": "^28.0.0",
		"@wordpress/data": "^10.0.0",
		"@wordpress/element": "^6.0.0",
		"@wordpress/i18n": "^5.0.0",
		"@wordpress/icons": "^10.0.0"
	},
	"lint-staged": {
		"*.php": [
			"./vendor/bin/phpcs"
		],
		"src/**/*.js": [
			"wp-scripts lint-js"
		],
		"src/**/*.scss": [
			"wp-scripts lint-style"
		]
	}
}
