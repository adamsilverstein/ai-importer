{
	"name": "adamsilverstein/ai-importer",
	"description": "Import content from social media platforms into WordPress using AI-powered analysis and mapping.",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Adam Silverstein",
			"email": "adam@developer.wordpress.org"
		}
	],
	"require": {
		"php": ">=8.1",
		"woocommerce/action-scheduler": "^3.7",
		"wordpress/wp-ai-client": "^0.2"
	},
	"require-dev": {
		"phpunit/phpunit": "^10.0",
		"wp-coding-standards/wpcs": "^3.0",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"phpstan/phpstan": "^1.10",
		"szepeviktor/phpstan-wordpress": "^1.3",
		"yoast/phpunit-polyfills": "^2.0"
	},
	"autoload": {
		"psr-4": {
			"AI_Importer\\": "includes/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"AI_Importer\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"lint": "phpcs",
		"lint:fix": "phpcbf",
		"test": "phpunit",
		"phpstan": "phpstan analyse"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		},
		"sort-packages": true
	}
}
